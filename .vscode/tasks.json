{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "windows": {
                "command": ".\\build.bat",
                "args": [
                    "C:\\mingw-w64\\mingw64\\bin",
                    "main.exe"
                ]
            },
            "linux": {
                "command": "g++",
                "args": [
                    "-g",
                    "*.cpp",
                    "-lpthread",
                    "--std=c++11",
                    "-o",
                    "main.out"
                ]
            },
            "osx": {
                "command": "g++",
                "args": [
                    "-g",
                    "*.cpp",
                    "-lpthread",
                    "--std=c++11",
                    "-o",
                    "main.out"
                ]
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": ".\\clean.bat",
            }
        }
    ]
}
